{
    "type": "symfony-bundle",
    "name": "kherge/uuid-bundle",
    "description": "Integrates the UUID library with Symfony 2.",
    "keywords": ["bundle", "symfony", "uuid"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/kherge/uuid-bundle/issues",
        "source": "https://github.com/kherge/uuid-bundle"
    },

    "authors": [
        {
            "name": "Kevin Herrera",
            "email": "kevin@herrera.io",
            "homepage": "http://kevin.herrera.io/",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-4": {
            "KHerGe\\Bundle\\UuidBundle\\": ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },

    "require": {
        "php": ">=5.4",

        "ramsey/uuid": "^3.2",
        "symfony/config": "^2.3",
        "symfony/dependency-injection": "^2.3",
        "symfony/http-kernel": "^2.3"
    },

    "require-dev": {
        "doctrine/dbal": "^2.5",
        "doctrine/orm": "^2.4",
        "ircmaxell/random-lib": "^1.1",
        "jms/serializer": "^1.1",
        "moontoast/math": "^1.1",
        "paragonie/random_compat": "^1.2",
        "ramsey/uuid-doctrine": "^1.1",
        "sensio/framework-extra-bundle": "^3.0.2"
    },

    "suggest": {
        "ext-libsodium": "For use as a CSPRNG.",
        "ext-uuid": "For generating time-based UUIDs.",
        "jms/serializer": "For better serialization/deserialization of UUIDs.",
        "moontoast/math": "For using UUID v2 and greater.",
        "ramsey/uuid-doctrine": "For registering a uuid type with Doctrine.",
        "sensio/framework-extra-bundle": "For converting request parameters to Uuid instances."
    }
}
